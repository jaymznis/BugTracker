                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Options
                            <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            @if (item.UserIsAdmin)
                            {
                                <li title="Edit">@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })</li>
                            }
                            else
                            {
                                <li title="Edit">@Html.ActionLink(" ", "UserEdit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })</li>
                            }

                            <li title="Details">@Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list" })</li>

                            <li role="separator" class="divider"></li>
                            @if (item.UserIsAdmin)
                            {
                                <li title="Delete">@Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })</li>
                            }

                        </ul>
                    </div>
                </td>
            </tr>
        }


    }

</table>
