@model BugTracker.Models.TicketModels.TicketDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<div>
    <h4>TicketDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name):
        </dt>

        <dd>
            <div class="well-sm col-lg-3"><p>@Html.DisplayFor(model => model.Name)</p></div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content):
        </dt>

        <dd>
            <div class="well col-lg-6"><p class="text-truncate">@Html.DisplayFor(model => model.Content)</p></div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedUtc):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedUtc):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BeingAddressed) -
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BeingAddressed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Complete) -
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Complete)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedBy):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedUtc):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedUtc)
        </dd>



    </dl>
</div>
<table class="table">
    @if (Model.Comments.Count == 0)
    {
        <h4 class="text-warning alert ">No Comments</h4>
    }
    else
    {
        <tr>
            <th class="col-lg-8 col-md-8 col-sm-8 col-xs-10">
                @Html.DisplayNameFor(model => model.Comments) <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
            </th>
            <th class="col-lg-2 col-md-2 col-sm-2 hidden-xs">
                Posted By <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </th>
            <th class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                Options  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            </th>
        </tr>

        foreach (var item in Model.Comments)
        {
            @Html.HiddenFor(modelItem => item.Id)
            <tr>
                <td class="col-lg-8 col-md-8 col-sm-8 col-xs-10 ">
                    <div class="well"> @Html.DisplayFor(modelItem => item.Content)</div>
                </td>
                <td class="col-lg-22 col-md-2 col-sm-2 hidden-xs">
                    @Html.DisplayFor(modelItem => item.Commentby)
                </td>
                <td class="col-lg-2 col-md-2 col-sm-2 col-xs-2">

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Options
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            @if (Model.UserIsAdmin)
                            {
                                <li title="Edit">@Html.ActionLink(" ", "../Comment/Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })</li>
                                @*<li><a href='@string.Format("https://localhost:44337/Comment/Edit/{0}", item.Id)'><span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit"></span></a></li>*@
                            }

                            @if (!Model.UserIsAdmin && Model.CreatedBy == item.Commentby)
                            {
                                <li title="Edit">@Html.ActionLink(" ", "../Comment/Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })</li>
                                @*<li><a href='@string.Format("https://localhost:44337/Comment/Edit/{0}", item.Id)'><span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit"></span></a></li>*@
                            }
                            <li title="Details">@Html.ActionLink(" ", "../Comment/Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list" })</li>
                            @*<li><a href='@string.Format("https://localhost:44337/Comment/Details/{0}", item.Id)'><span class="glyphicon glyphicon-list" aria-hidden="true" title="Details"></span></a></li>*@
                            <li role="separator" class="divider"></li>
                            @if (Model.UserIsAdmin)
                            {
                                <li title="Delete">@Html.ActionLink(" ", "../Comment/AdminDelete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })</li>
                                @*<li><a href='@string.Format("https://localhost:44337/Comment/AdminDelete/{0}", item.Id)'><span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span></a></li>*@
                            }
                            @if (!Model.UserIsAdmin && Model.CreatedBy == item.Commentby)
                            {
                                <li title="Delete">@Html.ActionLink(" ", "../Comment/Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })</li>
                                @*  <li><a href='@string.Format("https://localhost:44337/Comment/Delete/{0}", item.Id)'><span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span></a></li>*@
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    }

</table>

<div class="input-group">
    <input type="text" class="form-control" placeholder="Write A Comment" aria-describedby="basic-addon2">
    <span class="input-group-addon" id="basic-addon2">Post</span>
</div>
<p>
    @Html.ActionLink("Comment", "../Comment/Create", new { id = Model.Id }) |
    @Html.ActionLink("Add Attachment", "../Attachment/Create", new { id = Model.Id }) |
    @Html.ActionLink("Attachments", "../Attachment/Index", new { id = Model.Id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
