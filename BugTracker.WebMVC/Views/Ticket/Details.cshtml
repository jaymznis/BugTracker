@model BugTracker.Models.TicketModels.TicketDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<div>
    <h4>TicketDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BeingAddressed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BeingAddressed)
        </dd>

    </dl>
</div>
<table class="table">
    @if (Model.Comments.Count == 0)
    {
       <h4 class="text-warning alert ">No Comments</h4>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th class="hidden-sm hidden-xs">
                Posted By
            </th>
        </tr>

        foreach (var item in Model.Comments)
        {
            @Html.HiddenFor(modelItem => item.Id)
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td  class="hidden-sm hidden-xs">
                    @Html.DisplayFor(modelItem => item.Commentby)
                </td>
                <td>
                    @* @Html.ActionLink("Edit", "../Comment/Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "../Comment/Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "../Comment/Delete", new { id = item.Id })*@
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Options
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href='@string.Format("https://localhost:44337/Comment/Edit/{0}", item.Id)'><span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit"></span></a></li>
                            <li><a href='@string.Format("https://localhost:44337/Comment/Details/{0}", item.Id)'><span class="glyphicon glyphicon-list" aria-hidden="true" title="Details"></span></a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href='@string.Format("https://localhost:44337/Comment/Delete/{0}", item.Id)'><span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span></a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    }

</table>

<div class="input-group">
    <input type="text" class="form-control" placeholder="Write A Comment" aria-describedby="basic-addon2">
    <span class="input-group-addon" id="basic-addon2">Post</span>
</div>
<p>
    @Html.ActionLink("Comment", "../Comment/Create", new { id = Model.Id }) |
    @Html.ActionLink("Add Attachment", "../Attachment/Create", new { id = Model.Id }) |
    @Html.ActionLink("Attachments", "../Attachment/Index", new { id = Model.Id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

