@model IEnumerable<BugTracker.Models.AttachmentModels.AttachmentListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @*@Html.ActionLink("Create New", "Create", Request.QueryString)*@
    @Html.ActionLink("Back to Tickets", "../Ticket/Index")

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TicketId) <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketName) <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL) <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
        </th>
        <th>
            Options  <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
